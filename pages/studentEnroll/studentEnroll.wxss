.main {
  display: flex;
  flex-direction: column;
  font-size: 15px;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  height: 100vh;
  background-color: #f5f5f5;
}

.button {
  border: 1px solid #4cae4c;
  background-color: #5cb85c;
  font-size: 15px;
  color: #FFF;
}

.info-title {
  font-size: 15px;
  font-weight: bold;
  line-height: 25px;
}

.info-area {
 
  /* padding-top: 20px; */
}

.info-area .section {
  padding: 10px;
  /* margin-bottom: 20px; */
  background-color: #FFF;
   border-bottom: solid 1px #ddd;
}

.view-section{
  padding: 10px;
  margin-bottom: 20px;
  background-color: #FFF;
  align-items: center;
}

.radio-group .radio-label {
   line-height: 35px;
   padding-left: 25px;
}

.btn-area {
  display: flex;
  flex-direction: row;
  margin-top: 30px;
}

.btn-area .button {
  width: 150px;
}

.btn-area .button.reset {
  background-color: #c9302c;
  border-color: #c9302c;
}



.switch{
  padding-left: 20px;
}
.main-n{
  margin-top: 10px;
text-align: center;

}




