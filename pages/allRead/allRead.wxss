/* pages/activeList/activeList.wxss */

.head {
  display: flex;
  flex-direction: row;
  top: 0px;
  margin: 0;
  padding: 0;
  width: 100%;
  position: fixed;
  height: 40px;
  background-color: #fff;
  z-index: 2;
}

.head-info {
  position: relative;
  width: 90%;
  height: 30px;
  margin: 5px auto;
}

.head-title {
  width: 92%;
  height: 30px;
  position: relative;
  background-color: #f0f0f0;
  border-radius: 30px;
  margin: 0 auto;
  padding-left: 8%;
  padding-right: 0;
  font-size: 26rpx;
  z-index: 2;
}

.icon-s {
  position: absolute;
  left: 8px;
  top: 8px;
  z-index: 3;
}

.nav {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 30px;
  background-color: #fff;
  /* border-bottom: 1px solid #ccc; */
  box-shadow: 0px 3px 7px -2px #ccc;
  position: fixed;
  top: 40px;
  z-index: 2;
}

.nav-s {
  width: 49.5%;
  height: 100%;
  text-align: center;
  line-height: 30px;
  font-size: 28rpx;
}

.nav-s-f {
  width: 55px;
  height: 100%;
  position: relative;
  margin: 0 auto;
}

.nav-s-f-active {
  border-bottom: 2px solid #5787ff;
  color: #5787ff;
}

.nav-s-img {
  width: 12px;
  height: 5px;
  margin-left: 3px;
}

.nav-c {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: auto;
  position: fixed;
  top: 70px;
  font-size: 30rpx;
  padding: 10px;
  z-index: 1;
  background-color: #fff;
}

.nav-c-i {
  display: flex;
  float: right;
  margin-left: 82%;
  right: 0px;
  position: relative;
}

.nav-active {
  color: #5787ff;
}

.nav-c-l {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 30px;
  position: relative;
  margin: 0 auto;
  font-size: 24rpx;
}

.content {
  width: 100%;
  height: 400px;
  position: absolute;
  z-index: -2;
}

.content-l {
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
}

.con-i-items {
  width: 100%;
  height: 120px;
  position: relative;
  border-bottom: 1px solid #d5d5d5;
}

.conetent-item {
  width: 90%;
  height: 100%;
  margin: 0 auto;
  position: relative;
}

.content-img {
  height: 100px;
  float: left;
  width: 38%;
  margin: 10px auto;
  position: relative;
}

.c-img {
  width: 93%;
  height: 93%;
  position: relative;
  margin: 3.5% auto;
}

.c-img-i {
  width: 100%;
  height: 100%;
}

.content-info {
  float: right;
  position: relative;
  height: 100px;
  width: 61%;
  margin: 10px auto;
  line-height: 2;
}

.content-n {
  font-size: 26rpx;
  color: #121212;
  letter-spacing: 2rpx；;
}

.content-n-d {
  font-size: 26rpx;
  float: right;
  position: absolute;
  bottom: 8px;
  right: 2px;
  color: #3d6de6;
}

.content-b {
  margin-left: 10px;
  height: 25px;
  line-height: 25px;
  font-size: 25rpx;
  width: 70px;
  background-color: #c9daf9;
  position: relative;
  float: right;
  bottom: -7.5%;
}

