/* pages/myInfo/myInfo.wxss */

.head-1 {
  width: 100%;
  height: 90px;
  background-color: #5787ff;
  position: absolute;
  top: 0;
}

.userinfo {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-left: 10rpx;
  /* top: 10rpx; */
  position: relative;
  border-radius: 50%;
}
.userinfo>text {
  color: #f0f0f0;
  font-size: 30rpx;
  position: relative;
  margin-left: 170rpx;
}

.userinfo-nickname {
  top: -110rpx;
  margin-bottom: 15rpx;
}






.container-1 {
  height: 100%;
  display: flex;
  flex-direction: column;  
  justify-content: space-between;  
  box-sizing: border-box;
} 
.head {
  width: 100%;
  height: 100%;
  position: relative;
  margin-top: 90px;
}

.head-tips {
  font-size: 45rpx;
  line-height:45rpx;
  color: #353535;
  position: relative;
  border-left: 2px solid #4a7eff;
  margin-left: 25rpx;
  padding-left: 10rpx;
}

.head-info {
  width: 100%;
  height: 50px;
  border-bottom: 1px solid #dbdbdb;
  position: relative;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  line-height: 70px;
  font-size: 30rpx;
}

.head-i-p-n {
  position: relative;
  width: 21%;
  height: 100%;
  margin-right: 10rpx;
  color: #808080;
  margin-left: 25rpx;
}

.head-i-p {
  position: relative;
  width: 75%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.head-i-p>input {
  width: 95%;
  height: 100%;
  position: relative;
  top: 10px;
  font-size: 28rpx;
}
.head-i-p-c{
  width: 38%;
  height: 100%;
  color: #5082ff;
  font-size: 28rpx;
  text-align: right;
}

.h-f-l{
  width: 80%;
  height: 38px;
  position: relative;
  margin: 40px auto;
  font-size: 30rpx;
  letter-spacing:10rpx;
  background-color: #5082ff;
  color: #fff;
  text-align: center;
  line-height: 38px;
  border-radius: 20px;
}
radio {
  transform:scale(0.6);
}
.h-raido{
  font-size: 27rpx;
  left: -10px;
  position: relative;
}
.separation{
  width: 100%;
  height: 25px;
  position: relative;
  margin: 20px auto 0px auto;
  color: #5082ff;
  font-size: 28rpx;
  margin-left: 25rpx;
}