/**index.wxss**/

.container {
  background-color: #f0f0f0 !important;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
}

.head {
  width: 100%;
  height: 90px;
  background-color: #5787ff;
  position: absolute;
  top: 0;
}

.userinfo {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-left: 10rpx;
  /* top: 10rpx; */
  position: relative;
  border-radius: 50%;
}

.userinfo>text {
  color: #f0f0f0;
  font-size: 30rpx;
  position: relative;
  margin-left: 170rpx;
}

.userinfo-nickname {
  top: -110rpx;
  margin-bottom: 15rpx;
}

.userinfo-phone {
  font-size: 25rpx !important;
  top: -75rpx;
  color: #d5d5d5 !important;
}

.content {
  width: 100%;
  height: 400px;
  overflow-y: hidden;
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 195rpx;
}

.content-info {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.content-gl {
  margin-top: 12rpx !important;
  text-align: center;
}

.content-gl>view {
  font-size: 30rpx;
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.content-info-g {
  background-color: #f0f0f0;
  height: 10px;
}

.content-i-img {
  width: 50rpx;
  height: 50rpx;
  float: left;
  line-height: 50rpx;
  margin-top: 25rpx;
  margin-left: 30rpx;
  position: relative;
  z-index: 2;
}

.content-i-link {
  width: 18rpx;
  height: 24rpx;
  position: relative;
  float: right;
  margin-right: 30rpx;
  top: -60rpx;
}

.content-i-v {
  font-size: 30rpx;
  position: relative;
  width: 86%;
  height: 100%;
  z-index: 1;
  margin-left: 90rpx;
}
