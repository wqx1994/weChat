/* pages/activeDetail/activeDetail.wxss */

.head {
  width: 100%;
  height: 220px;
  margin: 0;
  padding: 0;
  position: absolute;
  top: 0;
  z-index: -2;
  box-sizing: border-box;
}

.head-img-i {
  width: 100%;
  height: 100%;
  display: block;
}

.content {
  width: 100%;
  height: auto;
  position: absolute;
  top: 220px;
  margin-bottom: 60px;
  z-index: -2;
}

.indexFixed {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}

.content-n {
  font-size: 32rpx;
  position: relative;
  margin: 0 auto;
  padding: 15rpx 20rpx;
  color: #121212;
  font-weight: bold;
}

.content-time {
  width: 100%;
  height: 60rpx;
  position: relative;
}

.c-n-title-int {
  font-size: 26rpx !important;
  color: #121212;
  font-weight: bold;
  position: relative;
  margin-top: 10rpx;
  padding-left: 5rpx;
  margin-left: 20rpx;
  line-height: 26rpx;
  float: left;
  border-left: 2px solid #5787ff;
}

.content-n-t {
  font-size: 24rpx !important;
  position: relative;
  float: left;
  padding-top: 10rpx;
  padding-left: 20rpx;
  color: #969696;
  line-height: 30rpx;
}

.content-c {
  width: 100%;
  position: relative;
}

.c-n-title-c {
  font-size: 26rpx !important;
  color: #121212;
  font-weight: bold;
  position: relative;
  margin-top: 10rpx;
  padding-left: 5rpx;
  margin-left: 20rpx;
  line-height: 26rpx;
  border-left: 2px solid #5787ff;
  margin-bottom: 15rpx;
}

.content-c-d {
  font-size: 24rpx;
  color: #a4a4a4;
  margin-top: 10rpx;
  margin-left: 20rpx;
  padding-right: 30rpx;
  line-height: 35rpx;
  position: relative;
  margin-bottom: 15rpx;
  letter-spacing: 1rpx;
}

.teacher-l {
  width: 94%;
  position: relative;
  margin: 0 auto;
  padding: 5rpx;
  display: flex;
  flex-direction: column;
}

.teacher-de {
  width: 100%;
  height: 100px;
}

.teacher-i {
  float: left;
  width: 25%;
  height: 90px;
  margin-top: 10px;
}

.t-img-i {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.teacher-info {
  float: right;
  width: 72%;
}

.t-name {
  font-size: 26rpx;
  color: #5787ff;
  margin-top: 15rpx;
  padding: 15rpx 3rpx;
}

.t-detail {
  font-size: 23rpx;
  color: #7e7e7e;
  padding: 3rpx;
  letter-spacing: 2rpx;
}

.foot {
  width: 100%;
  height: 50px;
  position: fixed;
  bottom: 0;
  border-top: 1px solid #b0b0b0;
  text-align: center;
  background-color: #5787ff;
  z-index: 0;
}

.foot-v {
  width: 100%;
  height: 50px;
  /* margin: 5px auto; */
  position: relative;
  background-color: #5787ff;
  font-size: 30rpx;
  color: #fff;
  line-height: 50px;
  /* border-radius: 20px; */
  letter-spacing: 2rpx;
}

.foot-v-c {
  background-color: red !important;
}

.foot-v-n {
  background-color: #757575 !important;
}

.foot-v-j {
  background-color: #ee7942 !important;
}

.v-pop {
  width: 85%;
  position: fixed;
  top: 10%;
  background-color: #fff;
  border-radius: 10px;
}

.page-section-l {
  width: 90%;
  position: relative;
  margin: 0px auto 15px auto;
}

.input-s {
  border: 1px solid #c9daf9;
  border-radius: 3px;
  font-size: 26rpx;
  padding-left: 10px;
  height: 40px;
}

.page-section-r {
  width: 70%;
  position: relative;
  margin: 10px auto 20px auto;
}

.re-btn {
  background-color: #5787ff;
  height: 40px;
  color: #fff;
  font-size: 30rpx;
  line-height: 40px;
  border-radius: 20px;
}

.pop-img-head {
  width: 100%;
  height: 350rpx;
  position: relative;
  border-radius: 5px;
}

.pop-img-head>image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}

.pop-info {
  width: 100%;
  overflow-y: auto;
  position: relative;
}

.pop-content {
  width: 100%;
  height: 100rpx;
  position: relative;
}

.pop-c-item-n {
  font-size: 28rpx;
  color: #121212;
  position: relative;
  margin: 25rpx 10rpx 0 40rpx;
  font-weight: bold;
  width: 23%;
  float: left;
}

.pop-role-t {
  display: flex;
  flex-direction: row;
  width: 63%;
  float: left;
  margin: 20rpx 0rpx 0rpx 0rpx;
}

.pop-content-c {
  width: 100%;
  max-height: 300rpx;
  min-height: 200rpx;
  /* height: 300rpx; */
  position: relative;
}

.pop-class-t {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 63%;
  float: left;
  margin: 15rpx 0rpx 0rpx 0rpx;
}

.pop-class-t>span {
  margin-right: 20rpx;
  display: line-block;
  border-radius: 20px;
  width: 150rpx;
  height: 50rpx;
  border: 1px solid #5787ff;
  font-size: 25rpx;
  text-align: center;
  line-height: 50rpx;
  color: #5787ff;
  background-color: #fff;
  padding: 0 10rpx;
  margin: 0rpx 10rpx 10rpx 0rpx;
}

.pop-role-t>span {
  margin-right: 20rpx;
  display: line-block;
  border-radius: 20px;
  width: 100rpx;
  height: 50rpx;
  border: 1px solid #5787ff;
  font-size: 25rpx;
  text-align: center;
  line-height: 50rpx;
  color: #5787ff;
  background-color: #fff;
}

.pop-active-color {
  color: #fff !important;
  background-color: #5787ff !important;
}

/*二维码*/

.content-img-i {
  height: 80px;
  width: 80px;
}

.colse {
  position: absolute;
  bottom: -30px;
  font-size: 50rpx;
  color: #fff;
  text-align: center;
  border: 1px solid #fff;
  border-radius: 50%;
  width: 25px;
  height: 25px;
  line-height: 22px;
  left: 45%;
}

.weui-cell_input>view {
  font-size: 28rpx;
}
